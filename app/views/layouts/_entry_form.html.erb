<div class='text-center'>
  <%= form_for @entry do |f| %>
  
    <% if @entry.errors.any? %>
      <div class='error messages'>
        <h2>Please correct the errors and resubmit the form.</h2>
        <ul>
          <% @entry.errors.full_messages.each do |message| %>
            <div class="alert alert-danger" role="alert">
              <li><%= message %></li>
            </div>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='field'>
      <p><%= f.label :title %><br>
      <%= f.text_field :title %></p>
    </div>
    <div class='field'>
      <p><%= f.label :description %><br>
      <%= f.text_field :description %></p>
    </div>
    <div class='actions'>
      <%= f.submit class: "btn btn-primary", id: 'form-submit' %>
    </div>
  <% end %>
</div>