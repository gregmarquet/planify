<div class='text-center' id="new_task_form">
  <%= form_for(@task, remote: true) do |f| %>
    <input type="hidden" name="user_id" value="<%= @user.id %>">
    <input type="hidden" name="category_id" value="category">
    <% if @task.errors.any? %>
      <div class='error messages'>
        <h2>Please correct the errors and resubmit the form.</h2>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <div class="alert alert-danger" role="alert">
              <li><%= message %></li>
            </div>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='field'>
      <p><%= f.label :title %><br>
      <%= f.text_field :title %></p>
    </div>
    <div class='field'>
      <p><%= f.label :description %><br>
      <%= f.text_field :description %></p>
    </div>
    <div class='actions'>
      <%= f.submit class: "btn btn-primary", id: 'form-submit' %>
    </div>
  <% end %>
</div>