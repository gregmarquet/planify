<div class='container-fluid'>
  <h1>My categories</h1>
  <div class="row centered">
    <% @user.categories.each do |category|%>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 categories" id="category-<%= category.id %>">
        <h4><%= category.name %></h4>
          <% category.tasks.each do |task|%>
            <div class='well'>
              <%= task.title %>
              </br>
              <%= button_to 'Delete', task_path(task), :method => :delete %>
              <%= button_to 'Completed', task_path(task), :method => :put, params: {:"task[status]" => "completed"} %>
              <%= button_to 'Abandoned', task_path(task), :method => :put, params: {:"task[status]" => "abandoned"} %>
            </div>
          <% end %>
        <div>
          <%= link_to 'Add task...', "#", data: {toggle: "modal", target: "#newtaskModal"}, class: "task_form_link", id: category.id %>
        </div>
      </div>
    <% end %>
  </div>
</div>

