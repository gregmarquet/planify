<div class=' categories_container container-fluid'>
  <h1 class="text-center m-b-50-px">My categories</h1>
  <div class="row">
    <% @user.user_categories.each do |user_category|%>
      <a href=<%= user_user_category_path(@user, user_category) %>>
        <div class="col-sm-4 col-sm-offset-1 categories" id="category-<%= user_category.category_id %>"><%= user_category.category.name %>
          <span class="tag tag-default tag-pill pull-right"><%= user_category.tasks.where(status: "incomplete").count%></span></h4>                  
        </div>
      </a>
    <% end %>
  </div>
</div>


