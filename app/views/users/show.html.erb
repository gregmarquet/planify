<div class='container-fluid'>
  <h1>My categories</h1>
  <div class="row centered">
    <% @user.categories.each do |category|%>
      <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3 categories" id="category-<%= category.id %>">
        <h4><%= category.name %></h4>
        <div><%= link_to 'Add Entry...', "#", data: {toggle: "modal", target: "#newEntryModal"}, class: "entry_form_link", id: category.id %></div>
        
      </div>
    <% end %>
  </div>
</div>

