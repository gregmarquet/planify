<div class='container-fluid'>
  <h1>My categories</h1>
  <div class="row centered">
    <% @user.user_categories.each do |user_category|%>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 categories" id="category-<%= user_category.category_id %>">
        <h4><%= user_category.category.name %></h4>
          <% user_category.tasks.each do |task|%>
            <% if task.status ==  "incomplete"%>
              <div class='well'>
                <%= task.title %>
                </br>
                <%= button_to 'Delete', task_path(task), :method => :delete %>
                <%= button_to 'Completed', task_path(task), :method => :put, params: {:"task[status]" => "completed"} %>
                <%= button_to 'Abandoned', task_path(task), :method => :put, params: {:"task[status]" => "abandoned"} %>
              </div>
            <% end %>
          <% end %>
        <div>
          <%= link_to 'Add task...', "#", data: {toggle: "modal", target: "#newTaskModal"}, class: "task_form_link", id: user_category.category_id %>
        </div>
      </div>
    <% end %>
  </div>
</div>

