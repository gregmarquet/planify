<% if @tasks.empty? %>
  <h3>You do not have any tasks!</h3>
<% else %>
<div class="row">
  <ul class="list-group col-sm-8 col-sm-offset-2">
    <h3 class="text-center">Incomplete</h3>
    <% @tasks.incomplete.each do |task| %>
      <li class="list-group-item"><%= task.title %></li>
    <% end %>
    <h3 class="text-center">Completed</h3>
    <% @tasks.completed.each do |task| %>
      <li class="list-group-item"><%= task.title %></li>
    <% end %>
    <h3 class="text-center">Abandoned</h3>
    <% @tasks.abandoned.each do |task| %>
      <li class="list-group-item"><%= task.title %></li> 
    <% end %> 
  </ul>
</div>
<% end %>