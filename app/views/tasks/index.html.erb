<% if @tasks.empty? %>
  <h3>You do not have any tasks!</h3>
<% else %>
<div class="row">
  <ul class="list-group col-sm-8 col-sm-offset-2">
    <h3 class="text-center m-t-50-px m-b-30-px">Incomplete</h3>
    <% @tasks.incomplete.each do |task| %>
      <a data-toggle="collapse" href="#collapsed-details-<%= task.id %>" aria-expanded="false" aria-control="collapsed-details-<%= task.id %>">
        <li class="list-group-item"><%= task.title %>
          <div class="collapse descriptions" id="collapsed-details-<%= task.id %>">
          <% if (!task.description || task.description == "") %>
            No description for this task!
          <% else %>
            <%= task.description %>
          <% end %>
          </div>
        </li>
      </a>
    <% end %>
    <h3 class="text-center m-t-50-px m-b-30-px">Completed</h3>
    <% @tasks.completed.each do |task| %>
      <a data-toggle="collapse" href="#collapsed-details-<%= task.id %>" aria-expanded="false" aria-control="collapsed-details-<%= task.id %>">
        <li class="list-group-item"><%= task.title %>
          <div class="collapse descriptions" id="collapsed-details-<%= task.id %>">
          <% if (!task.description || task.description == "") %>
              No description for this task!
          <% else %>
              <%= task.description %>
          <% end %>
          </div>
        </li>
      </a>
    <% end %>
    <h3 class="text-center m-t-50-px m-b-30-px">Abandoned</h3>
    <% @tasks.abandoned.each do |task| %>
      <a data-toggle="collapse" href="#collapsed-details-<%= task.id %>" aria-expanded="false" aria-control="collapsed-details-<%= task.id %>">
        <li class="list-group-item"><%= task.title %>
          <div class="collapse descriptions" id="collapsed-details-<%= task.id %>">
          <% if (!task.description || task.description == "") %>
              No description for this task!
          <% else %>
              <%= task.description %>
          <% end %>
          </div>
        </li>
      </a>
    <% end %> 
  </ul>
</div>
<% end %>